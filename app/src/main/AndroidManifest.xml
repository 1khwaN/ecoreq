<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecycleRequestApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <service
            android:name=".remote.RecyclableItemService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="Instantiatable"></service>

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CancelRequestActivity" />
        <activity android:name=".ViewAllRequestsActivity" />
        <activity android:name=".ViewRequestsActivity" />
        <activity
            android:name=".AdminDashboardActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".UserDashboardActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>

        <activity android:name=".AddRecyclableItemActivity" />
        <activity android:name=".UpdateRecyclableItemActivity" />
    </application>

</manifest>