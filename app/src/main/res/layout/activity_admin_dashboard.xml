<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundadmin"
    android:fitsSystemWindows="true"
    android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            tools:context=".AdminDashboardActivity">

                <TextView
                    android:id="@+id/tvAdminTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="48dp" android:text="Admin Dashboard"
                    android:textSize="28sp" android:textStyle="bold" />

                <Button
                    android:id="@+id/btnViewAllRequests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:paddingVertical="12dp" android:textSize="18sp"
                    android:text="View All Requests" />

                <Button
                    android:id="@+id/btnAddRecyclableItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:paddingVertical="12dp"
                    android:textSize="18sp"
                    android:text="Add New Recyclable Item" />

                <Button
                    android:id="@+id/btnUpdateRecyclableItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:paddingVertical="12dp"
                    android:textSize="18sp"
                    android:text="Update Recyclable Item" />

        </LinearLayout>
</ScrollView>